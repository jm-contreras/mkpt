---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
---
<Layout>
  <Header slot="header" />

  <section>
    <h1 class="font-heading mb-6">Contact</h1>
    <p class="text-lg text-slate leading-relaxed max-w-2xl">Have questions? Send me a message and I'll get back to you within 24 hours.</p>

    <div class="mt-12">
      <ContactForm />
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
