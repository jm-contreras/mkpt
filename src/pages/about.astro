---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { frontmatter } from '../content/pages/about.md';
import Content from '../content/pages/about.md';
import AboutCTA from '../components/AboutCTA.astro';
const pageTitle = frontmatter?.title ?? 'Hey, I\'m Morgan.';

---
<Layout>
  <Header slot="header" />

  <section class="py-8 md:py-12">
    <div class="grid gap-12 md:grid-cols-2 items-start">
      <div>
        <img src="/images/about.png" alt="Morgan Kelley" class="w-full rounded-2xl shadow-lg" />
      </div>
      <div class="text-slate space-y-6 content">
        <h1 class="font-heading text-charcoal">{pageTitle}</h1>
        <Content />
        <AboutCTA />
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
