---
import site from '../data/site.js';
---
<form method="POST" action="https://api.web3forms.com/submit" class="max-w-xl">
  <input type="hidden" name="access_key" value={site.web3forms_key} />
  <input type="hidden" name="redirect" value="/contact?success=1" />

  <label class="block">
    <span class="text-sm font-medium text-charcoal">Name</span>
    <input name="name" required class="mt-2 block w-full border border-stone rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent transition-all" />
  </label>

  <label class="block mt-6">
    <span class="text-sm font-medium text-charcoal">Email</span>
    <input type="email" name="email" required class="mt-2 block w-full border border-stone rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent transition-all" />
  </label>

  <label class="block mt-6">
    <span class="text-sm font-medium text-charcoal">Message</span>
    <textarea name="message" rows="5" required class="mt-2 block w-full border border-stone rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent transition-all"></textarea>
  </label>

  <!-- hCaptcha verification -->
  <div class="mt-6">
    <div id="hcaptcha" class="bg-white border border-stone rounded-lg p-4 flex items-center gap-3">
      <input type="checkbox" class="w-5 h-5 cursor-pointer accent-sage" />
      <div class="flex-1">
        <div class="text-sm font-medium text-charcoal">I'm not a robot</div>
        <div class="text-xs text-slate">hCaptcha</div>
      </div>
      <div class="text-right">
        <div class="text-xs text-slate">Privacy - Terms</div>
      </div>
    </div>
    <input type="hidden" name="h-captcha-response" />
  </div>

  <div class="mt-8">
    <button type="submit" class="btn-primary">Send</button>
  </div>
</form>
